/* miniprogram/pages/landingpage/landingpage.wxss */

.top-display-area {
  position: relative;
  width: 100%;
  height: 520rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.display-icon {
  margin-top: 20rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border-color: white;
  border-width: 10rpx;
}

.display-sologen {
  margin-top: 20rpx;
  font-family: pingfangSC;
}

.display-button {
  margin-top: 20rpx;
  width: 180rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background-color: cornflowerblue;
  color:white;
}

.service-table {
  position: relative;
  width: 100%;
  height: 850rpx;
  display: flex;
  justify-content: center;
}

.table-content {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
}
.table-caption {
  display: flex;
  font-size: 24px;
  font-weight: 60000;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.table-header {
  display: flex;
  background-color: rgb(52, 86,132);
  color: white;
  font-size: 15px;
  justify-content: space-between;
  padding-left: 5px;
  padding-right: 5px;
  font-weight: 400px;
}
.table-cell {
  display: flex;
  font-size: 15px;
  justify-content: space-between;
  font-weight: 400px;
}
.table-cell-text {
  margin-left: 8px;
  margin-right: 8px;
}
.map-view {
  position: relative;
  width: 100%;
  height: 300rpx;
  background-color: gold;
}